<!DOCTYPE html>
<html>
<head>
  <title>VelocityTest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

 <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Call API</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse pull-right" style="margin-right: 30px;">
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <li><a href="">Welcome<%= " " +current_user.name %></a></li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">API <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="<%= articles_path %>">All Articles</a></li>
                <% if user_signed_in? %>
                  <li><%= link_to "Sign out", destroy_user_session_path, method: :DELETE %></li>
                <% else %>
                  <li><%= link_to "Sign In", new_user_session_path %></li>
                <% end %>
              </ul>
              </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container" style="padding-top: 60px;">
        <%= yield %>
    </div>

</body>
</html>
