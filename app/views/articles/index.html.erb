<p id="notice"><%= notice %></p>

<h1><%= current_user.name %>'s Articles</h1>

<table class="table">
    <thead>
      <tr>
       <th>Owner name</th>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>User</th>
      <th colspan=""></th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><%= article.owner_name %></td>
        <td><%= article.name %></td>
        <td><%= article.price %></td>
        <td><%= article.description %></td>
        <td><%= article.user_id %></td>
        <td>
          <%= link_to 'GET /articles/:id', article %> | <%= link_to 'Edit', edit_article_path(article) %>
          | <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= link_to 'Show', article %>
        </td>

      </tr>
    <% end %>
    </tbody>
  </table>


<%= link_to 'New Article', new_article_path %>
